<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="HandheldFriendly" content="True">
    <title>Phan Hưng</title>
    @Styles.Render("~/Styles/css")
</head>
<body class="default">

    <!-- Preloading -->
    <div class="preloading">
        <div class="wrap-preload">
            <div class="cssload-loader"></div>
        </div>
    </div>
    <!-- .Preloading -->

    <div class="wrapper">
        <!-- Sidebar left -->
        <nav id="sidebarleft" class="sidenav">
            <div id="dismiss">
                <i class="fas fa-times"></i>
            </div>
            <div class="sidebar-header">
                <h3>Tài khoản</h3>
            </div>
            @Html.Action("HeaderWidget", "Member")
            <ul class="list-unstyled components">
                <li>
                    <a href="/"><i class="fas fa-home"></i> Trang chủ</a>
                </li>
                <li>
                    <a href="/thong-tin-tai-khoan.html"><i class="fas fa-user"></i> Tài khoản</a>
                </li>

                <li>
                    <a href="#"><i class="fas fa-history"></i> Lịch sử mua hàng</a>
                </li>
                <li>
                    <a href="/khuyen-mai.html"><i class="fas fa-percent"></i> Khuyến mãi</a>
                </li>
                <li>
                    <a href="/tin-tuc.html"><i class="fas fa-newspaper"></i> Tin tức & Mẹo</a>
                </li>
                <li>
                    <a href="#"><i class="fas fa-comments"></i> Góp ý</a>
                </li>
                <li>
                    <a href="/cap-nhat-tai-khoan.html"><i class="fas fa-cog"></i> Cài đặt</a>
                </li>
                <li>
                    <a href="#"><i class="fas fa-exclamation-circle"></i> Giới thiệu</a>
                </li>
            </ul>
        </nav>
        <!-- .Sidebar left -->
        <!-- Sidebar right -->
        <nav id="sidebarright" class="sidenav">
            <div id="dismiss">
                <i class="fas fa-times"></i>
            </div>
            <div class="sidebar-header">
                <h3>Giỏ hàng</h3>
            </div>
            <div class="search-form">
                @Html.Action("WidgetCart","Product")
            </div>
        </nav>
        <!-- .Sidebar right-->
        <!-- Page content  -->

        @RenderBody()
        <!-- .Page content  -->
        <div class="overlay"></div>
        <!-- Optional JavaScript -->
        <!-- jQuery v3.4.1 -->

    </div>
    @Scripts.Render("~/Styles/js")
    <script type="text/javascript">
        $('.datepicker').datepicker({
            weekStart: 1,
            daysOfWeekHighlighted: "6,0",
            autoclose: true,
            todayHighlight: true,
        });
    </script>
</body>
</html>
