@model IEnumerable<FoodOrderSolution.Data.ViewModels.ProductViewList>
@using FoodOrderSolution.Helper.Core
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content">
    <!-- Header  -->
    <nav class="navbar navbar-expand-lg navbar-light bg-header">
        <div class="container-fluid">
            <button type="button" id="sidebarleftbutton" class="btn">
                <i class="fas fa-align-left"></i>
            </button>
            <div class="logo"><a href="/">PHAN HƯNG</a></div>
            <button type="button" id="sidebarrightbutton" class="btn">
                <i class="fas fa-shopping-cart"></i>
            </button>
            <button type="button" style="margin-right: 25px;" id="sidebarsearchbutton" class="btn">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </nav>
    <div class="content-wrap">
        <div class="list-section">
            @if (Model != null && Model.Count() > 0)
            {
                <div class="heading-page">
                    @Model.FirstOrDefault().Category
                </div>
                <div class="wrap-list-rc">
                    @foreach (var item in Model)
                    {
                        var url = $"/san-pham/{item.Title.ToUrlFormat(true, true)}-{item.ID}.html";
                        <div class="lrc-item">
                            <a href="@url">
                                <div class="lrc-content">
                                    <div class="lrc-img">
                                        <img src="@item.Avatar" alt="item">
                                    </div>
                                    <div class="lrc-desc">
                                        <div class="lrc-title">@item.Title</div>
                                        <div class="lrc-button">
                                            <div class="lrcb-left">

                                                <span class="lhc hours"><i class="fas fa-clock"></i>&nbsp;@item.IntendTime m</span>
                                                <span class="lhc comment"><i class="fas fa-star"></i>&nbsp;@item.Rate</span>
                                                <span class="lhc price-span">@String.Format("{0:0,00}", item.Price)đ</span>
                                            </div>
                                            <div class="lrcb-right">

                                            </div>
                                            <div class="clear"></div>
                                        </div>
                                        <div class="lrc-text">
                                            @if (item.Desc != null)
                                            {
                                                if (item.Desc.Length > 50)
                                                {
                                                    <p>@item.Desc.Substring(0, 50) [...]</p>
                                                }
                                                else
                                                {
                                                    <p> @item.Desc</p>
                                                }
                                            }
                                        </div>

                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }

        </div>
    </div>
    <div class="footer">
        <div class="footer-heading">Kết nối với chúng tôi</div>
        <div class="socmed">
            <div class="socmed-line">
                <div class="socmed-item">
                    <a href="#" class="si-icon"> <i class="fab fa-facebook-f"></i></a>
                </div>
            </div>

            <div class="socmed-line">
                <div class="socmed-item">
                    <a href="#" class="si-icon"><i class="fab fa-instagram"></i></a>
                </div>
            </div>

            <div class="socmed-line">
                <div class="socmed-item">
                    <a href="#" class="si-icon"><i class="fab fa-twitter"></i></a>
                </div>
            </div>

            <div class="socmed-line">
                <div class="socmed-item">
                    <a href="#" class="si-icon"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

