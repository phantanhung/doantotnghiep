@model IEnumerable<FoodOrderSolution.Data.ViewModels.NewsView>
    @using FoodOrderSolution.Helper.Core
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div id="content">
        <!-- Header  -->
        <nav class="navbar navbar-expand-lg navbar-light bg-header">
            <div class="container-fluid">
                <button type="button" id="sidebarleftbutton" class="btn">
                    <i class="fas fa-align-left"></i>
                </button>
                <div class="logo">Foodkuy</div>
                <button type="button" id="sidebarrightbutton" class="btn">
                    <i class="fas fa-shopping-cart"></i>
                </button>
                <button type="button" style="margin-right: 25px;" id="sidebarsearchbutton" class="btn">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </nav>
        <div class="content-wrap">
            <div class="list-section">
                <div class="heading-page">
                    Tin Tức &amp; Mẹo

                </div>
                <div class="wrap-list-rc">
                    @if (Model != null && Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                             var url = $"/tin-tuc/{item.Title.ToUrlFormat(true, true)}-{item.ID}.html";
                            <div class="lrc-item">
                                <a href="@url">
                                    <div class="lrc-content">
                                        <div class="lrc-img">
                                            <img src="@item.Avatar" alt="item">
                                        </div>
                                        <div class="lrc-desc">
                                            <div class="lrc-title">@item.Title</div>
                                            <div class="lrc-button">
                                                <div class="lrcb-left">
                                                    <span class="lhc hours"> <i class="fas fa-eye"></i>  @item.ViewNumber</span>
                                                </div>
                                                <div class="lrcb-right">

                                                </div>
                                                <div class="clear"></div>
                                            </div>
                                            <div class="lrc-text">
                                                @if (item.Desc.Length > 50)
                                                {
                                                    <p>@item.Desc.Substring(0, 50) [...]</p>
                                                }
                                                else
                                                {
                                                    <p>@item.Desc</p>
                                                }
                                            </div>

                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
                

            </div>
        </div>
        <div class="footer">
            <div class="footer-heading">Kết nối với chúng tôi</div>
            <div class="socmed">
                <div class="socmed-line">
                    <div class="socmed-item">
                        <a href="#" class="si-icon"> <i class="fab fa-facebook-f"></i></a>
                    </div>
                </div>

                <div class="socmed-line">
                    <div class="socmed-item">
                        <a href="#" class="si-icon"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>

                <div class="socmed-line">
                    <div class="socmed-item">
                        <a href="#" class="si-icon"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>

                <div class="socmed-line">
                    <div class="socmed-item">
                        <a href="#" class="si-icon"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

