@model FoodOrderSolution.Data.ViewModels.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content">
    <!-- Header  -->
    <nav class="navbar navbar-expand-lg navbar-light bg-header">
        <div class="container-fluid">
            <button type="button" id="sidebarleftbutton" class="btn">
                <i class="fas fa-align-left"></i>
            </button>
            <div class="logo">PHAN HƯNG</div>
            <button type="button" id="sidebarrightbutton" class="btn">
                <i class="fas fa-shopping-cart"></i>
            </button>
            <button type="button" style="margin-right: 25px;" id="sidebarsearchbutton" class="btn">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </nav>
    <!-- .Header  -->
    <!-- Content Wrap  -->
    <div class="content-wrap">


        <div class="login-section">
            @using (Html.BeginForm("Login", "Member", FormMethod.Post, new { @class = "form", @id = "setting" }))
            {
                <div class="fb-text-heading">Đăng Nhập</div>
                <div class="stt-form">


                    <div class="form-group">
                        <div class="col-xs-12">
                            <label for="email">Tên đăng nhập</label>
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "demo", @title = "Tên đăng nhập" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label for="new_password">Mật khẩu</label>
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "demo", @title = "Mật khẩu", @type = "password" })
                        </div>
                    </div>
                </div>
                <div class="submit-btn">
                    <div class="col-12">
                        <button class="theme-button" type="submit">Đăng nhập</button>
                    </div>
                </div>
            }
            <div class="row-forgot">
                <a class="forgotr" href="#">Quên mật khẩu</a>
            </div>
            <div class="wrap-line-or">
                <div class="or-line">
                    <div class="ol-or">OR</div>
                    <div class="ol-line"></div>
                </div>
            </div>

            <div class="row-forgot">
                <a class="forgotr" href="/dang-ky.html">Bạn chưa có tài khoản? Đăng ký</a>
            </div>


        </div>
    </div>
    <!-- .Content wrap  -->
    <!-- Footer  -->
    <div class="footer">
        <div class="footer-heading">Kết nối với chúng tôi</div>
        <div class="socmed">
            <div class="socmed-line">
                <div class="socmed-item">
                    <a href="#" class="si-icon"> <i class="fab fa-facebook-f"></i></a>
                </div>
            </div>

            <div class="socmed-line">
                <div class="socmed-item">
                    <a href="#" class="si-icon"><i class="fab fa-instagram"></i></a>
                </div>
            </div>

            <div class="socmed-line">
                <div class="socmed-item">
                    <a href="#" class="si-icon"><i class="fab fa-twitter"></i></a>
                </div>
            </div>

            <div class="socmed-line">
                <div class="socmed-item">
                    <a href="#" class="si-icon"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
        </div>
    </div>
    <!-- .Footer  -->
</div>
