@model IEnumerable<FoodOrderSolution.Data.ViewModels.OrderView>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <h1 class="title">Đơn hàng</h1>
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/"><i class="fa fa-home"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="/Promotion/List">Đơn hàng</a>
                        </li>
                        <li class="active">
                            <strong>Đơn hàng</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Danh sách</h2>
                    <div class="actions panel_actions pull-right">
                        <i class="box_toggle fa fa-chevron-down"></i>
                        <a href=""><i class="box_setting fa fa-refresh"></i></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="example" class="display table table-hover table-condensed" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Mã</th>
                                        <th>Ngày</th>
                                        <th>Hình thức TT</th>
                                        <th>Trạng thái TT</th>
                                        <th>Trạng thái</th>
                                        <th>Người mua</th>
                                        <th>Tổng tiền</th>
                                        <th>Giảm giá</th>
                                        <th>Thành tiền</th>
                                        <th>Ngày cập nhật</th>
                                        <th>Chức năng</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model != null && Model.Count() > 0)
                                    {
                                        foreach (var item in Model)
                                        {

                                            
                                    <tr>
                                        <td>@item.Code</td>
                                        <td>@String.Format("{0:dd/MM/yyyy HH:mm}", item.Date)</td>
                                        <td>
                                            @if (item.TypePayment == 0)
                                            {
                                                <p>Thanh toán khi nhận hàng</p>
                                            }
                                            @if (item.TypePayment == 1)
                                            {
                                                <p>Thanh toán Online</p>
                                            }
                                            @if (item.TypePayment == 2)
                                            {
                                                <p>Chuyển khoản</p>
                                            }
                                        </td>
                                        <td>
                                            @if (item.StatusPayment == 1)
                                            {
                                                <p>Đã thanh toán</p>
                                            }
                                            else
                                            {
                                                <p>Chưa thanh toán</p>
                                            }
                                        </td>
                                        <td>
                                            @if (item.StatusOrder == 0)
                                            {
                                                <p>Đang đợi</p>
                                            }
                                            @if (item.StatusOrder == 0)
                                            {
                                                <p>Đang thực hiện</p>
                                            }
                                            @if (item.StatusOrder == 0)
                                            {
                                                <p>Đang giao</p>
                                            }
                                            @if (item.StatusOrder == 0)
                                            {
                                                <p>Đã giao</p>
                                            }
                                            @if (item.StatusOrder == 4 || item.StatusOrder == 5)
                                            {
                                                <p>Đã hủy</p>
                                            }
                                        </td>
                                        <td>
                                            @item.MemberName
                                        </td>
                                        <td>
                                            @item.Total
                                        </td>
                                        <td>
                                            @item.Reduce
                                        </td>
                                        <td>
                                            @item.Amount
                                        </td>
                                        <td>@String.Format("{0:dd/MM/yyyy HH:mm}", item.Date)</td>
                                        <td class="action-td">
                                            <div class="row">
                                                <a href="/Promotion/Detail/@item.ID" class="btn btn-info"><i class="fa fa-eye"></i></a>
                                                <a id="r_@item.ID" href="" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                            </div>
                                            <div class="row">
                                                <a class="btn btn-success" href="/Promotion/Edit/@item.ID"><i class="fa fa-edit"></i></a>
                                                <a class="btn btn-warning" href="/Promotion/FeedBack/@item.ID"><i class="fa fa-comments"></i></a>
                                            </div>

                                        </td>
                                    </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                            <!-- ********************************************** -->
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</section>
