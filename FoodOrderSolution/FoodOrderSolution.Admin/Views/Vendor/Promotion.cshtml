@model IEnumerable<FoodOrderSolution.Data.ViewModels.PromotionAdminView>
@{
    ViewBag.Title = "Promotion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <h1 class="title">Khuyến mãi</h1>
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/"><i class="fa fa-home"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="/Vendor/List">Nhà cung cấp</a>
                        </li>
                        <li class="active">
                            <strong>Khuyến mãi</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Danh sách</h2>
                    <div class="actions panel_actions pull-right">
                        <i class="box_toggle fa fa-chevron-down"></i>
                        <a href=""><i class="box_setting fa fa-refresh"></i></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">



                            <!-- ********************************************** -->


                            <table id="example" class="display table table-hover table-condensed" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tiêu đề</th>
                                        <th>Hình ảnh</th>
                                        <th>Mã</th>
                                        <th>Loại</th>
                                        <th>Nhà cung cấp</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @{ string pName = "";}
                                    @if (Model != null && Model.Count() > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            if (item.Type.Contains("1"))
                                            {
                                                pName += "Giới hạn người tham gia <br/>";
                                            }
                                            if (item.Type.Contains("2"))
                                            {
                                                pName += "Giới hạn độ tuổi <br/>";
                                            }
                                            if (item.Type.Contains("3"))
                                            {
                                                pName += "Giới hạn giới tính <br/>";
                                            }
                                            if (item.Type.Contains("4"))
                                            {
                                                pName += "Giới hạn cấp độ <br/>";
                                            }
                                            if (item.Type.Contains("5"))
                                            {
                                                pName += "Giới hạn điểm thành viên <br/>";
                                            }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Title</td>
                                                <td><img style="width:200px;height:auto" src="@item.Avatar" /></td>
                                                <td>@item.Code </td>
                                                <td>@Html.Raw(pName)</td>
                                                <td>@item.Vendor</td>

                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                            <!-- ********************************************** -->




                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</section>

