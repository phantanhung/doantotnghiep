@model FoodOrderSolution.Data.ViewModels.ResponseStaffLogin
@if (Model != null && Model.ID != 0)
{
    <li class="profile">
        <a href="#" data-toggle="dropdown" class="toggle">
            <span>@Model.Name <i class="fa fa-angle-down"></i></span>
        </a>
        <ul class="dropdown-menu profile animated fadeIn">

            <li>
                <a href="/System/Profiles">
                    <i class="fa fa-user"></i>
                    Thông tin
                </a>
            </li>

            <li class="last">
                <a href="/System/Logout">
                    <i class="fa fa-lock"></i>
                    Đăng xuất
                </a>
            </li>
        </ul>
    </li>
}
