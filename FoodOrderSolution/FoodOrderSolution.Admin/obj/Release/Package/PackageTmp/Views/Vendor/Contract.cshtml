@model IEnumerable<FoodOrderSolution.Data.ViewModels.ContractView>
@{
    ViewBag.Title = "Contract";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper" style=''>

            <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
                <div class="page-title">

                    <div class="pull-left">
                        <h1 class="title">Hợp đồng</h1>
                    </div>

                    <div class="pull-right hidden-xs">
                        <ol class="breadcrumb">
                            <li>
                                <a href="/"><i class="fa fa-home"></i>Dashboard</a>
                            </li>
                            <li>
                                <a href="/Vendor/List">Nhà cung cấp</a>
                            </li>
                            <li class="active">
                                <strong>Hợp đồng</strong>
                            </li>
                        </ol>
                    </div>

                </div>
            </div>
            <div class="clearfix"></div>

            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Danh sách</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle fa fa-chevron-down"></i>
                            <a href=""><i class="box_setting fa fa-refresh"></i></a>
                            <a href="/Vendor/ContractAdd"><i class="box_setting fa fa-plus"></i></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">



                                <!-- ********************************************** -->


                                <table id="example" class="display table table-hover table-condensed" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Mã</th>
                                            <th>File</th>
                                            <th>Ghi chú</th>
                                            <th>Ngày</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @if (Model != null && Model.Count() > 0)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.ID</td>
                                                    <td>@item.Code</td>
                                                    <td>@item.FileScan</td>
                                                    <td>@item.Note</td>
                                                    <td>@String.Format("{0:dd/MM/yyyy HH:mm}",item.Date)</td>
                                                    <td class="action-td">
                                                        <div class="row">
                                                            <a class="btn btn-success" href="/Vendor/ContractEdit/@item.ID"><i class="fa fa-edit"></i></a>
                                                            <a id="r_@item.ID" onclick="deletes('/Vendor/ContractDelete/@item.ID','@item.ID','@item.Code')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                                <!-- ********************************************** -->




                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>

