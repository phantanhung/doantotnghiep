@model FoodOrderSolution.Data.ViewModels.VendorView
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <h1 class="title">Thêm nhà cung cấp</h1>
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/"><i class="fa fa-home"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="/Vendor/List">Nhà cung cấp</a>
                        </li>
                        <li class="active">
                            <strong>Thêm mới</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Thông Tin</h2>
                </header>
                <div class="content-body">
                    <div class="row">

                        @using (Html.BeginForm("Add", "Vendor", FormMethod.Post))
                        {
                            <div class="panel-group primary" id="accordion-2" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion-2" href="#collapseOne-2" aria-expanded="true" aria-controls="collapseOne-2">
                                                <i class="fa fa-check"></i> Thông tin
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne-2" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <div class="col-lg-12 col-md-8 col-sm-9 col-xs-12">
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Tên</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Tên" })
                                                        @Html.ValidationMessageFor(model => model.Name)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Địa chỉ</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Địa chỉ" })
                                                        @Html.ValidationMessageFor(model => model.Address)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">SĐT</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "SĐT" })
                                                        @Html.ValidationMessageFor(model => model.Phone)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Mail</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", @placeholder = "Mail" })
                                                        @Html.ValidationMessageFor(model => model.Mail)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">MST</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.TaxCode, new { @class = "form-control", @placeholder = "MST" })
                                                        @Html.ValidationMessageFor(model => model.TaxCode)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Tài khoản</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.Account, new { @class = "form-control", @placeholder = "Tài khoản" })
                                                        @Html.ValidationMessageFor(model => model.Account)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Mô tả</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextAreaFor(model => model.Desc, new { @class = "form-control", @placeholder = "Mô tả" })
                                                        @Html.ValidationMessageFor(model => model.Desc)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Hợp đồng</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.DropDownListFor(model => model.ContractCode, new SelectList(ViewBag.ContractLst, "Code", "Note", "....Select...."), new { @class = "form-control", @placeholder = "Contract" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Cấp độ</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.DropDownListFor(model => model.Level, new SelectList(ViewBag.LevelLst, "Level", "Name", "....Select...."), new { @class = "form-control", @placeholder = "Cấp độ" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-5">Trạng thái</label>
                                                    <span class="desc"></span>
                                                    <select name="Status" id="Status" class="form-control">
                                                        <option selected value="1">Sử dụng</option>
                                                        <option value="-1">Tạm ẩn</option>
                                                    </select>
                                                </div>



                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                    <a href="/Vendor/List" class="btn">Hủy</a>
                                </div>
                            </div>
                        }
                    </div>


                </div>
            </section>

        </div>



    </section>
</section>

