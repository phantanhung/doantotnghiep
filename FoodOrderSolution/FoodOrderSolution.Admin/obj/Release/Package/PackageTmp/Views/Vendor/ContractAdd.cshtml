@model FoodOrderSolution.Data.ViewModels.ContractView
@{
    ViewBag.Title = "ContractAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <h1 class="title">Thêm hợp đồng</h1>
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/"><i class="fa fa-home"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="/Vendor/List">Nhà cung cấp</a>
                        </li>
                        <li class="active">
                            <strong>Hợp đồng</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Thông Tin</h2>
                </header>
                <div class="content-body">
                    <div class="row">

                        @using (Html.BeginForm("ContractAdd", "Vendor", FormMethod.Post))
                        {
                            <div class="panel-group primary" id="accordion-2" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion-2" href="#collapseOne-2" aria-expanded="true" aria-controls="collapseOne-2">
                                                <i class="fa fa-check"></i> Thông tin
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne-2" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <div class="col-lg-12 col-md-8 col-sm-9 col-xs-12">

                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Số hợp đồng</label>
                                                    <span class="desc">Đảm bảo số hợp đồng là duy nhất</span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @placeholder = "Số hợp đồng" })
                                                        @Html.ValidationMessageFor(model => model.Code)
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">File</label>
                                                    <span class="desc">File scan hợp đồng</span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.FileScan, new { @class = "form-control", @placeholder = "FileScan" })
                                                        @Html.ValidationMessageFor(model => model.FileScan)
                                                    </div>
                                                    <script>
                                                        $('#FileScan').click(function () {
                                                            var finder = new CKFinder();
                                                            finder.selectActionFunction = function (fileUrl) {
                                                                $('#FileScan').val(fileUrl);
                                                            };
                                                            finder.popup();
                                                        });
                                                    </script>
                                                </div>

                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Ghi chú</label>
                                                    <span class="desc">Ghi chú ngắn cho hợp đồng</span>
                                                    <div class="controls">
                                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @placeholder = "Ghi chú" })
                                                        @Html.ValidationMessageFor(model => model.Note)
                                                    </div>
                                                </div>


                                                <div class="form-group">
                                                    <label class="form-label" for="field-5">Trạng thái</label>
                                                    <span class="desc"></span>
                                                    <select name="Status" id="Status" class="form-control">
                                                        <option selected value="1">Sử dụng</option>
                                                        <option value="-1">Tạm ẩn</option>
                                                    </select>
                                                </div>



                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                    <a href="/Vendor/Contract" class="btn">Hủy</a>
                                </div>
                            </div>
                        }
                    </div>


                </div>
            </section>

        </div>



    </section>
</section>

